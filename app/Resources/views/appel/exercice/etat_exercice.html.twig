<div id="modal-regular1{{ element.id }}" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('etat_exercice',{'id': element.id } )}}" method="post" >
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 class="modal-title text-left">
                    {% if element.estActif==0 %}
                        Activation
                    {% else %}
                        Désactivation
                    {% endif %}
                </h3>
            </div>
            <div class="modal-body">
                {% if element.estActif==0 %}
                    Voulez - vous  activer  l'exercice <strong>{{ element.libExercice }}</strong> ?
                {% else %}
                    Voulez - vous  clôturer  l'exercice <strong>{{ element.libExercice }}</strong> ?
                {% endif %}

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-sm btn-primary">Activer</button>
            </div>
        </form>
        </div>
    </div>
</div>